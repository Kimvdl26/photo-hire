<div class="col-9 mt-5 mx-auto">
  <h4> Upload an Artwork </h4>
  <%# <ul> <%= link_to "Back", artworks_path %>
  <div class="col-6 mt-5 mx-auto d-flex justify-content-between align-items-center">
    <%= simple_form_for([@artist, @artwork]) do |f| %>
      <%= f.input :artworks, as: :file, input_html: { multiple: true } %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.submit class: 'btn btn-primary full-width-button' %>
    <% end %>
  </div>

  <div>
    <div class="d-flex justify-content-between mt-5 mb-2">
      <h4> Your artwork </h4>
      <%= link_to "View all", artist_artworks_path(@artist), class: "btn btn-primary style: border-radius: 8px;" %>
    </div>

    <%= render "artworks/artwork_row", artworks: @artworks %>
  </div>

</div>
