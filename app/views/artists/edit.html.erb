<div class="container">
  <div class="col-7 mt-5 mx-auto">
    <h2>Artist Details</h2>

      <%= simple_form_for @artist do |f| %>
        <div class="form-inputs">
          <%= f.input :description %>
          <%= f.input :personality %>
          <%= f.input :style %>
          <%= f.input :location %>
          <%= f.input :hourly_rate, input_html: { type: 'number' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: "button button-blue" %>
        </div>
      <% end %>

    <%= link_to "Back", root_path %>
  </div>
</div>
